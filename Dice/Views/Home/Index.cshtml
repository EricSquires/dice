@model Dice.Models.HomeModel

@{
    ViewData["Title"] = null;
}

<table class="table">
    <thead>
        <tr><th># of Faces</th><th>Value</th></tr>
    </thead>
    <tbody>
        @foreach (var die in Model.Dice)
        {
            <tr class="dice"><td class="die-faces">@die.NumFaces</td><td><div class="swap-container"><div class="die-value swap-item">@die.Value</div></div></td></tr>
        }
    </tbody>
</table>

<div class="container">
    <a onclick="roll()" id="rollBtn" class="btn btn-default">Roll</a>
</div>